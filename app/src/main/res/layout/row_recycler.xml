<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row_Recycler_Card"
    android:layout_width="180dp"
    android:layout_height="170dp"
    android:backgroundTint="#081a24"
    android:layout_marginTop="10dp"
    android:clickable="true"
    app:cardElevation="20dp"
    app:cardCornerRadius="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/txt_degree"
            app:layout_constraintTop_toTopOf="parent"
            android:text="O"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/txt_degree"
            android:layout_width="wrap_content"
            android:layout_height="0dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/guid_ver_10"
            app:layout_constraintBottom_toTopOf="@id/guid_hor_40"
            tools:text="28"
            android:gravity="start|center"
            android:textSize="35dp"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/img_status"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/guid_ver_50"
            app:layout_constraintBottom_toTopOf="@id/guid_hor_40"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/search"/>

        <TextView
            android:id="@+id/cityName"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textStyle="bold"
            app:layout_constraintRight_toLeftOf="@+id/guid_ver_50"
            app:layout_constraintLeft_toRightOf="@id/guid_ver_10"
            app:layout_constraintTop_toBottomOf="@+id/guid_hor_40"
            app:layout_constraintBottom_toTopOf="@id/guid_hor_60"
            tools:text="jakarta"
            android:textSize="15dp"
            android:gravity="start|center"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/countryName"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintRight_toLeftOf="@+id/guid_ver_50"
            app:layout_constraintLeft_toRightOf="@id/guid_ver_10"
            app:layout_constraintTop_toBottomOf="@+id/guid_hor_60"
            app:layout_constraintBottom_toTopOf="@id/guid_hor_80"
            tools:text="INA"
            android:textSize="15dp"
            android:textStyle="bold"
            android:gravity="start|center"
            android:textColor="@color/calm_white"
            />
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/guid_ver_10"
            app:layout_constraintRight_toLeftOf="@id/guid_ver_25"
            app:layout_constraintTop_toBottomOf="@id/guid_hor_80"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/drop"/>
        
        <TextView
            android:id="@+id/percentOfAir"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@id/guid_ver_25"
            app:layout_constraintTop_toBottomOf="@id/guid_hor_80"
            app:layout_constraintRight_toLeftOf="@id/guid_ver_50"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="17%"
            android:gravity="center"
            android:textColor="@color/white"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/guid_ver_50"
            app:layout_constraintTop_toBottomOf="@+id/guid_hor_80"
            app:layout_constraintRight_toLeftOf="@id/guid_ver_75"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/wind"/>

        <TextView
            android:id="@+id/windSpeed"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/guid_ver_75"
            app:layout_constraintTop_toBottomOf="@id/guid_hor_80"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="80km/h"
            android:textColor="@color/white"
            android:gravity="center|start"
            android:textSize="11dp"/>



        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guid_ver_50"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guid_ver_25"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guid_ver_10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.10"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guid_ver_75"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guid_hor_40"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="68dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guid_hor_80"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guid_hor_60"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.6"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>